body {
  background-color: #fff8ee
}


html {
    font-family: var(--cp-font-family);
    line-height: 1.5;
    font-size: 15px;
    font-weight: 400;
}
h1, h2, h4 {
    text-align: center;
}
* {
     box-sizing: border-box;
}

html {
     scroll-behavior: smooth;
}

body {
     color: #666666;
     font-size: 14px;
     font-family: 'Lato', sans-serif;
     line-height: 1.80857;
     font-weight: normal;
}




h1 {
     font-size: 24px;
     font-family: 'Baloo Chettan', cursive;
}

h2 {
     font-size: 22px;
     font-family: 'Baloo Chettan', cursive;
}

h3 {
     font-size: 18px;
     font-family: 'Baloo Chettan', cursive;
}

#main-navbar,
 #nav2,
 #nav3 {
     background-color: blue;
     overflow: hidden;
 }
 
 #navbar-container,
 #nav2-container,
 #nav3-container {
     position: relative;
     float: left;
     width: 100%;
     border: 1px dotted yellow;
 }
 
 #navbar-container ul,
 #nav2-container ul,
 #nav3-container ul {
     margin: 0;
     padding: 0;
     float: left;
     position: relative;
     left: 50%;
	 box-shadow: 10px 5px 5px red;
 }
 
 #navbar-container li,
 #nav2-container li,
 #nav3-container li {
     list-style-type: none;
     float: left;
     /*position: relative;*/
     right: 50%;
     display: block;
 }
 
 #navbar-container li:hover,
 #nav2-container li:hover,
 #nav3-container li:hover {
     background-color: rgb(231, 91, 36);
 }
 
 #navbar-container li a,
 #nav2-container li a,
 #nav3-container li a {
     text-decoration: none;
     color: #fff;
     display: block;
     padding: 10px 20px;
     font-size: 20px;
 }
 
 section {
	 box-shadow: 10px 5px 5px red;
 }
 
 img {
   display: block;
   margin-left: auto;
   margin-right: auto;
   width: 50%;
}

p {
   display: block;
   margin-left: auto;
   margin-right: auto;
   width: 50%;
   font-size: 18px;
   font-family: 'Baloo Chettan', cursive;
}

